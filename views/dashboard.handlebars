{{!-- <h1 class="text-center mx-auto pt-2">Dashboard</h1> --}}
<div class="row">
  <div class="text-center mx-auto pt-2 user-name">
    <h2 id="blogName">{{name}}'s Blog</h2>
  </div>
</div>
<div class="text-center">
  <div class="container">
    <div class="row">
      <div class="col-md-10 mx-auto text-left mt-5">
        {{#if blogPosts.length}}
        {{#each blogPosts as |blogPost|}}
        {{> dashboardPost blogPost}}
        <br>
        {{/each}}
        {{/if}}
      </div>
    </div>
  </div>
  {{! Renders blog post title (link), username, date, description & edit/delete buttons on dashboard page }}
  <div class="container">
    <div class="row">
      <div class="card text-dark shadow mb-3">
        <div class="text-center mx-auto p-3">
          <h2><a href="/blog/{{id}}">{{title}}</a></h2>
          <p>Created by {{user.name}} on {{format_date date_created}}</p>
          <p>{{description}}</p>
          <button class="btn btn-dark" id="editBtn" data-id="{{id}}">Edit</button>
          <button class="btn btn-dark" id="deleteBtn" data-id="{{id}}">Delete</button>
        </div>
      </div>
    </div>
  </div>

  {{#if (is_my_page user.id userId)}}
  <div class="container">
    <div class="row text-center">
      <a href="/create"><button class="btn btn-dark mt-3">Create a post!</button></a>
      <br>
      <br>
      <br>
      <br>
      <br>
    </div>
  </div>
  {{else}}
  <div class="container">
    <div class="row justify-content-center">
      <p>This user hasn't created any posts yet!</p>
    </div>
  </div>
  {{/if}}
</div>

<script src="/mvc-tech-blog/public/js/dashboard.js"></script>